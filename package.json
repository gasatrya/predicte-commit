{
  "name": "predicte-commit",
  "displayName": "Predicte Commit",
  "description": "AI commit message generator",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:predicteCommit.generateMessage",
    "onCommand:predicteCommit.setApiKey"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "predicteCommit.generateMessage",
        "title": "Predicte Commit: Generate Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "predicteCommit.setApiKey",
        "title": "Predicte Commit: Set API Key"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "predicteCommit.generateMessage"
        },
        {
          "command": "predicteCommit.setApiKey"
        }
      ],
      "scm/title": [
        {
          "command": "predicteCommit.generateMessage",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Predicte Commit",
      "properties": {
        "predicteCommit.provider": {
          "type": "string",
          "default": "mistral",
          "description": "AI provider to use (e.g. 'mistral', 'ollama', 'vllm', 'lmstudio'). Matches the registered provider ID.",
          "order": 1
        },
        "predicteCommit.models": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of models to use for the active provider. If empty, the provider's defaults are used.",
          "order": 2
        },
        "predicteCommit.ignoredFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*-lock.json",
            "*.svg",
            "dist/**"
          ],
          "description": "Glob patterns (repo-relative) to exclude from staged diff context",
          "order": 3
        },
        "predicteCommit.useLocal": {
          "type": "boolean",
          "default": false,
          "description": "Use a local provider (Ollama, vLLM, LM Studio) instead of Mistral cloud",
          "order": 10
        },
        "predicteCommit.localBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for local provider. Leave empty to use the provider's default (Ollama: :11434, vLLM: :8000, LM Studio: :1234).",
          "order": 11
        },
        "predicteCommit.localModel": {
          "type": "string",
          "default": "",
          "description": "Model name for local provider. Leave empty to assume default.",
          "order": 12
        },
        "predicteCommit.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Log prompt payload and ignore-filter diagnostics to the Predicte Commit output channel",
          "order": 99
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "node ./node_modules/typescript/bin/tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "node ./node_modules/typescript/bin/tsc -p . --outDir out",
    "watch-tests": "node ./node_modules/typescript/bin/tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "node ./node_modules/typescript/bin/tsc --noEmit",
    "lint": "node ./node_modules/eslint/bin/eslint.js src",
    "format": "prettier --write .",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run compile-tests && npx mocha out/test/unit/**/*.test.js --ui tdd",
    "test:integration": "node ./node_modules/@vscode/test-cli/out/bin.mjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'npm run test:unit'"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "minimatch": "^10.0.3"
  }
}
